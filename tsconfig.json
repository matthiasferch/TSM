{
    "compilerOptions": {
        "target": "ES5",
        "lib": ["ESNext"],
        "module": "ESNext",
        "moduleResolution": "node",
        "outDir": "dist",
        "declarationDir": "lib",
        "emitDeclarationOnly": true,
        "declaration": true,
        "strict": true,
        "sourceMap": true,
        "isolatedModules": true,
        "noImplicitReturns": true,
        "skipLibCheck": true,
        "types": [
            "vitest/globals"
        ]
    },
    "include": [
        "src/**/*",
        "test"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
}